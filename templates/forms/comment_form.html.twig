{% block comments %}
<h4 class="pb-2">Comments</h4>
   {{ form_start(form) }}
    {{ form_errors(form) }}
        <form>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for= {{ form_widget(form.name) }} Name </label>
                    <input  class="form-control" id="{{ form_widget(form.name) }}">
                </div>
                <div class="form-group col-md-6">
                    <label for= {{ form_widget(form.password) }} Password</label>
                    <input  class="form-control" type="password" id="{{ form_widget(form.password) }}">
                </div>
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Add your comment...</span>
                </div>
                    <textarea class="form-control" reszi aria-label={{ form_widget(form.text) }}</textarea>
            </div><br>

            <button type="submit" class="btn btn-primary" id= {{ form_widget(form.save) }}</button>
        </form>
    {{ form_end(form) }}
{% endblock %}

